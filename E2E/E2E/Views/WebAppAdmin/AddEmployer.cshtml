
@{
    ViewBag.Title = "AddEmployer";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<section id="content">

    <div class="g12 nodrop" style="margin-left: 0px;">
        <h1 style="margin-top: 0px;">Add Employer</h1>
        <p style="margin-bottom: 5px;">Add new Employer</p>
    </div>

    <div class="g12" style="margin: auto 0px;">
        <form id="formAddEmployer" action="/WebAppAdmin/AddEmployerData" method="post" autocomplete="on">
            <fieldset>

                <section>
                    <label for="EmployerName">Employer Name</label>
                    <div><input type="text" id="EmployerName" name="EmployerName" required class="g6"></div>
                </section>

                <section>
                    <label for="BusinessName">Business Name</label>
                    <div><input type="text" id="BusinessName" name="BusinessName" class="g6"></div>
                </section>

                <section>
                    <label for="BusinessAddress1">Business Address1</label>
                    <div><textarea id="BusinessAddress1" name="BusinessAddress1" required class="g12" rows="4"></textarea></div>
                </section>

                <section>
                    <label for="BusinessAddress2">Business Address2</label>
                    <div><textarea id="BusinessAddress2" name="BusinessAddress2" class="g12" rows="2"></textarea></div>
                </section>

                <section>
                    <label for="City">City</label>
                    <div><input type="text" id="City" name="City" required class="g2"></div>
                </section>

                <section>
                    <label for="State">State</label>
                    <div><input type="text" id="State" name="State" required class="g2"></div>
                </section>

                <section>
                    <label for="zip">zip</label>
                    <div><input type="text" id="zip" name="zip" required class="g1"></div>
                </section>

                <section>
                    <label for="Phone">Phone</label>
                    <div><input type="phone" id="Phone" name="Phone" required class="g3"></div>
                </section>

                <section>
                    <label for="Fax">Fax</label>
                    <div><input type="text" id="Fax" name="Fax" class="g3"></div>
                </section>

                <section>
                    <label for="PrimaryEmail">PrimaryEmail</label>
                    <div><input type="email" id="PrimaryEmail" name="PrimaryEmail" required class="g4"></div>
                </section>

                <section>
                    <label for="SecondaryEmail">Secondary Email</label>
                    <div><input type="email" id="SecondaryEmail" name="SecondaryEmail" class="g4"></div>
                </section>

                <section>
                    <label for="URL">URL</label>
                    <div><input type="url" id="URL" name="URL" class="g8 placeholder" placeholder="http://"></div>
                </section>

                <section>
                    <label for="TotalEmployees">Total Employees</label>
                    <div><input type="number" id="TotalEmployees" name="TotalEmployees"  class="g1 integer"></div>
                </section>

                <section>
                    <label for="BusinessTaxID">Business Tax ID</label>
                    <div><input type="text" id="BusinessTaxID" name="BusinessTaxID"  class="g4"></div>
                </section>

                <section style="display: none;">
                    <label>Active</label>
                    <div>
                        <input type="radio" id="ActiveYes" name="Active" value="Yes" checked><label for="required_first_radio">Yes</label>
                        <input type="radio" id="ActiveNo" name="Active" value="No"><label for="required_second_radio">No</label>
                    </div>
                </section>

                <section>
                    <label for="SubscriptionDate">Subscription Date</label>
                    <div><input type="text" id="SubscriptionDate" name="SubscriptionDate" required class="g2 date"></div>
                </section>

                <section>
                    <label for="ServiceDetails">Service Details</label>
                    <div><textarea id="ServiceDetails" name="ServiceDetails" class="g12" rows="3"></textarea></div>
                </section>

                <section>
                    <label for="SubscriptionType">Subscription Type</label>
                    <div><input type="text" id="SubscriptionType" name="SubscriptionType" required class="g4"></div>
                </section>

                <section>
                    <label for="SubscriptionPlanName">Subscription Plan Name</label>
                    <div><input type="text" id="SubscriptionPlanName" name="SubscriptionPlanName" required class="g4"></div>
                </section>


                <section>
                    <label for="SubscriptionPlanCode">Subscription Plan Code</label>
                    <div><input type="text" id="SubscriptionPlanCode" name="SubscriptionPlanCode" required class="g4"></div>
                </section>

                <section>
                    <label for="TotalLogin">Total Login</label>
                    <div><input type="number" id="TotalLogin" name="TotalLogin" required class="g1"></div>
                </section>

                <section>
                    <label for="EffectiveDate">Effective Date</label>
                    <div><input type="text" id="EffectiveDate" name="EffectiveDate" required class="g2 date"></div>
                </section>

                <section>
                    <label for="ExpirationDate">Expiration Date</label>
                    <div><input type="text" id="ExpirationDate" name="ExpirationDate" required class="g2 date"></div>
                </section>

                <section>
                    <label for="AmountCharged">Amount Charged</label>
                    <div><input type="number" id="AmountCharged" name="AmountCharged" class="g1 decimal"></div>
                </section>

                <section>
                    <label for="RegistrationFeeCharged">Registration Fee Charged</label>
                    <div><input type="number" id="RegistrationFeeCharged" name="RegistrationFeeCharged" class="g1 decimal"></div>
                </section>

                <section>
                    <label for="SubscriptionFeeCharged">Subscription Fee Charged</label>
                    <div><input type="number" id="SubscriptionFeeCharged" name="SubscriptionFeeCharged" class="g1 decimal"></div>
                </section>

                <section>
                    <label for="PaymentDueDate">Payment Due Date</label>
                    <div><input type="text" id="PaymentDueDate" name="PaymentDueDate" class="g2 date"></div>
                </section>

                <section>
                    <div>
                        <button class="submit" name="submitbuttonname" value="submitbuttonvalue">Submit</button>
                        <button class="reset">Reset</button>
                    </div>
                </section>
            </fieldset>
        </form>
    </div>
</section>

<script>

    var $content = $('#content');
    $content.find('form').wl_Form({
        onSuccess: function (data, status) {
            debugger;
            var res = JSON.parse(data);
            $.msg(res.Message);
            $content.find('form').wl_Form('reset');
            setTimeout(function () {
                window.location = '/WebAppAdmin/ManageEmployer';
            }, 2000);
    	},
    	onError: function(status, error, jqXHR){
            $.msg(res.Message);
    	}
    });

</script>

