
@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<section id="content">

    <div class="g12 nodrop" style="margin-left: 0px;">
        <h1 style="margin-top: 0px;">Sign Up</h1>
        <p style="margin-bottom: 5px;">Register yourself as Employer Admin!</p>
    </div>

    <div class="g12" style="margin: auto 0px;">
        <form id="formAddEmployerAdmin" action="/Reviewer/SignUpReviewer" method="post" autocomplete="on">

            <input type="hidden" id="AdminUserID" name="ReviewerID" value="@ViewBag.ReviewerID" />
            <input type="hidden" id="RoleID" name="RoleID" value="@ViewBag.RoleID" />
            <input type="hidden" id="EmployerID" name="EmployerID" value="@ViewBag.EmployerID" />

            <fieldset>

                <section>
                    <label for="UserName">User Name</label>
                    <div><input type="text" id="UserName" name="UserName" required class="g4" value="@ViewBag.UserName"></div>
                </section>

                <section>
                    <label for="Password">Password</label>
                    <div>
                        <input type="Password" id="Password" name="Password" required class="g3" data-regex="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[A-Za-z\d$@@$!%*?&]{8,}">
                        <br><span>Password must contain minimum eight characters, at least one uppercase letter, one lowercase letter and one number!</span>
                    </div>
                </section>

                <section>
                    <label for="ReviewerFirstName">Reviewer First Name</label>
                    <div><input type="text" id="ReviewerFirstName" name="ReviewerFirstName" required class="g4" value="@ViewBag.FirstName"></div>
                </section>

                <section>
                    <label for="ReviewerMiddleName">Reviewer Middle Name</label>
                    <div><input type="text" id="ReviewerMiddleName" name="ReviewerMiddleName" class="g4"></div>
                </section>

                <section>
                    <label for="ReviewerLastName">Reviewer Last Name</label>
                    <div><input type="text" id="ReviewerLastName" name="ReviewerLastName" required class="g4" value="@ViewBag.LastName"></div>
                </section>

                <section>
                    <label for="ReviewerNickName">Reviewer Nick Name</label>
                    <div><input type="text" id="ReviewerNickName" name="ReviewerNickName" required class="g4"></div>
                </section>

                <section>
                    <label for="ReviewerTitle">Reviewer Title</label>
                    <div><input type="text" id="ReviewerTitle" name="ReviewerTitle" required class="g4"></div>
                </section>

                <section>
                    <label for="DateOfBirth">Date Of Birth</label>
                    <div><input type="text" id="DateOfBirth" name="DateOfBirth" required class="g2 date"></div>
                </section>

                <section>
                    <label for="Address1">Address1</label>
                    <div><textarea id="Address1" name="Address1" required class="g12" rows="4"></textarea></div>
                </section>

                <section>
                    <label for="Address2">Address2</label>
                    <div><textarea id="Address2" name="Address2" class="g12" rows="2"></textarea></div>
                </section>

                <section>
                    <label for="City">City</label>
                    <div><input type="text" id="City" name="City" required class="g2"></div>
                </section>

                <section>
                    <label for="State">State</label>
                    <div><input type="text" id="State" name="State" required class="g2"></div>
                </section>

                <section>
                    <label for="zip">zip</label>
                    <div><input type="number" id="zip" name="zip" required class="g1 integer"></div>
                </section>

                <section>
                    <label for="WorkPhoneNumber">Work Phone Number</label>
                    <div><input type="text" id="WorkPhoneNumber" name="WorkPhoneNumber" required class="g2"></div>
                </section>

                <section>
                    <label for="Extn">Extn</label>
                    <div><input type="text" id="Extn" name="Extn" class="g1"></div>
                </section>

                <section>
                    <label for="CellPhoneNumber">Cell Phone Number</label>
                    <div><input type="text" id="CellPhoneNumber" name="CellPhoneNumber" required class="g2"></div>
                </section>

                <section>
                    <label for="PrimaryEmail">PrimaryEmail</label>
                    <div><input type="email" id="PrimaryEmail" name="PrimaryEmail" required class="g4"></div>
                </section>

                <section>
                    <label for="SecondaryEmail">Secondary Email</label>
                    <div><input type="email" id="SecondaryEmail" name="SecondaryEmail" class="g4"></div>
                </section>

                <section style="display: none;">
                    <label>Active</label>
                    <div>
                        <input type="radio" id="ActiveYes" name="Active" value="Yes" checked><label for="required_first_radio">Yes</label>
                        <input type="radio" id="ActiveNo" name="Active" value="No"><label for="required_second_radio">No</label>
                    </div>
                </section>

                <section>
                    <div>
                        <button class="submit" name="submitbuttonname" value="submitbuttonvalue">Submit</button>
                        <button class="reset">Reset</button>
                    </div>
                </section>
            </fieldset>
        </form>
    </div>
</section>

<script>

    var $content = $('#content');
    $content.find('form').wl_Form({
        onSuccess: function (data, status) {
            var res = JSON.parse(data);
            if (res.Code == "1") {
                $.msg(res.Message);
                $content.find('form').wl_Form('reset');
                setTimeout(function () {
                    window.location = '/Home/Confirmation';
                }, 2000);
            }
            else
            {
                $.msg(res.Message);
            }

    	},
    	onError: function(status, error, jqXHR){
            $.msg(res.Message);
    	}
    });

</script>

