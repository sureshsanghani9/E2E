<form id="formAddEndClient" action="/Employee/SaveEndClientData" method="post" autocomplete="on">

    <input type="hidden" id="EndClientID" name="EndClientID" value="0" />

    <fieldset>

        <section>
            <label for="EndClientBusinessName">End Client Business Name</label>
            <div><input type="text" id="EndClientBusinessName" name="EndClientBusinessName" required class="g4"></div>
        </section>

        <section>
            <label for="EmployeeTitleAtEndClientSite">Employee Title At End Client Site</label>
            <div><input type="text" id="EmployeeTitleAtEndClientSite" name="EmployeeTitleAtEndClientSite" required class="g4"></div>
        </section>

        <section>
            <label for="EndClientAddress1">Address1</label>
            <div><textarea id="EndClientAddress1" name="EndClientAddress1" required class="g12" rows="4"></textarea></div>
        </section>

        <section>
            <label for="EndClientAddress2">Address2</label>
            <div><textarea id="EndClientAddress2" name="EndClientAddress2" class="g12" rows="2"></textarea></div>
        </section>

        <section>
            <label for="EndClientCity">City</label>
            <div><input type="text" id="EndClientCity" name="EndClientCity" required class="g2"></div>
        </section>

        <section>
            <label for="EndClientState">State</label>
            <div><input type="text" id="EndClientState" name="EndClientState" required class="g2"></div>
        </section>

        <section>
            <label for="EndClientzip">Zip</label>
            <div><input type="text" id="EndClientzip" name="EndClientzip" required class="g1"></div>
        </section>

        <section>
            <label for="EndClientPhoneNumber">Phone Number</label>
            <div><input type="text" id="EndClientPhoneNumber" name="EndClientPhoneNumber" required class="g2"></div>
        </section>

        <section>
            <label for="EndClientExtn">Extn</label>
            <div><input type="text" id="EndClientExtn" name="EndClientExtn" class="g1"></div>
        </section>

        <section>
            <label for="EmployeeEmailAtEndClient">Employee Email At End Client</label>
            <div><input type="email" id="EmployeeEmailAtEndClient" name="EmployeeEmailAtEndClient" class="g4"></div>
        </section>

        <section>
            <div>
                <button class="submit" name="submitbuttonname" value="submitbuttonvalue">Submit</button>
                <button class="reset">Reset</button>
                <button class="btn" name="btncancel" value="btncancel" onclick="$('#divAddEndClient').hide(); return false;">Cancel</button>
            </div>
        </section>
    </fieldset>
</form>

<script>

    var $content = $('#content');
    $content.find('form').wl_Form({
        onSuccess: function (data, status) {
            var res = JSON.parse(data);
            if (res.Code == "1") {
                $.msg(res.Message);
                $content.find('form').wl_Form('reset');
                $('#divAddEndClient').hide();
                setTimeout(function () {
                    window.location = "/Employee/ManageEndClients";
                }, 2000);
            }
            else {
                $.msg(res.Message);
            }

        },
        onError: function (status, error, jqXHR) {
            $.msg(res.Message);
        }
    });

    function ResetForm()
    {
        $content.find('form').wl_Form('reset');
    }

</script>

